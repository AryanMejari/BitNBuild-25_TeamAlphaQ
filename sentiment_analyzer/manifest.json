{
    "manifest_version": 3,
    "name": "Review Radar: Sentiment Analyzer",
    "version": "1.0",
    "description": "Analyzes and summarizes product sentiment from e-commerce reviews.",
    
    "action": {
      "default_popup": "out/index.html",
      "default_icon": {
      },
      "default_title": "Review Radar"
    },
    
    "icons": {
    },
    

    "permissions": [
    ],
    
    
    "host_permissions": [
      "http://localhost:8000/*" 
    ],
    
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self';"
    }
  }